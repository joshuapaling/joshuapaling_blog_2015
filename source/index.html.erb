---
pageable: true
per_page: 10
---

<% paging = partial 'partials/pagination', locals: {
  paginate: paginate,
  page_number: page_number,
  prev_page: prev_page,
  next_page: next_page,
  num_pages: num_pages,
} %>
<%= paging %>

<% page_articles.each_with_index do |article, i| %>
  <h1 <%= 'class="bg-danger"' unless article.published? %> >
    <%= link_to article.title, article %>
    <small class="smaller"><%= article.date.strftime('%b %e %Y') %></small>
  </h1>



  <!-- use article.summary(250) if you have Nokogiri available to show just
       the first 250 characters -->
  <%#= article.summary(250) %>
  <%#= link_to 'more', article, class: 'btn btn-default' %>
  <hr />
<% end %>

<%= paging %>
